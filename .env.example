# --- DJANGO SETTINGS ---
# Use a strong, random secret key in production!
SECRET_KEY=your_secret_key_here
# Set to 'False' in production!
DEBUG=True
# Comma-separated list of allowed hosts/domains
ALLOWED_HOSTS=localhost,127.0.0.1

# --- DATABASE CONFIGURATION ---
# These variables map directly to your Django DATABASES setting
DB_NAME=restaurant_db
DB_USER=asgard_admin
DB_PASSWORD=your_strong_app_password
DB_HOST=db
DB_PORT=3306

# --- MYSQL CONTAINER INITIALIZATION ---
# Only used by the MySQL image to set up the environment on first run
MYSQL_ROOT_PASSWORD=your_super_secret_root_password